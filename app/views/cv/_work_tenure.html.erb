<%= turbo_frame_tag dom_id(tenure, :edit) do %>
  <li class="p-2">
    <h3 class="font-bold"><%= tenure.employer %></h3>
    <%= tenure.from_month %>/<%= tenure.from_year %> to
    <%= tenure.to_present? ? 'Present' : "#{tenure.to_month}/#{tenure.to_year}" %>
    <hr />
    <% tenure.roles.each do |role| %>
      <%= render partial: 'cv/work_role', locals: { role: role } %>
    <% end %>
  </li>
<% end %>