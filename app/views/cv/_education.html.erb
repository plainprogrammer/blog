<%= turbo_frame_tag dom_id(education, :edit) do %>
  <li class="p-2">
    <h3 class="font-bold"><%= education.institution %></h3>
    <h4 class="italic"><%= education.degree %></h4>
    <%= education.to_month %>/<%= education.to_year %>
    <% if authenticated? -%>
      <div class="float-right">
        <%= link_to icon("fa-solid", "pen-to-square"), edit_cv_education_path(education), aria: { label: "Edit Education" } %>
        &nbsp;&nbsp;
        <%= link_to icon("fa-solid", "trash-can"), cv_education_path(education), data: {
                                                                                   turbo_method: :delete,
                                                                                   turbo_confirm: 'Are you sure?'
                                                                                 },
                                                                                 aria: { label: "Delete Education" } %>
      </div>
    <% end -%>
  </li>
<% end %>